{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES6", "ES2016", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "ES5",
    "noImplicitAny": false,
    "types": []
  },
  "include": ["src/*"]
}
